pipeline {
    agent any
    environment {
        ENV = "dev"
        BETA_IP_AKS_1 = "http://52.169.231.177/healthcheck"
        BETA_IP_AKS_2 = "http://40.85.74.99/healthcheck"
        LIVE_IP_AKS_1 = "http://40.87.134.50/healthcheck"
        LIVE_IP_AKS_2 = "http://13.95.29.175/healthcheck"
    }
    parameters {
         string(defaultValue: "DEV", description: 'Environment to deploy to?', name: 'ENV')
    }
    stages {
        stage('Build') {
            steps {
                    echo "Building....."
                    sh "sudo docker build -t azureHackathon.azurecr.io/thoughtapi:${BUILD_NUMBER} ."
                    sh "sudo docker push azureHackathon.azurecr.io/thoughtapi:${BUILD_NUMBER}"
            }
        }
        stage('Deploy BETA') {
            steps{
                git branch: 'master',
                    url: 'https://github.com/azurehackathon/cdorchestrator.git'
                echo "Success"
                sh "go run manifest-generation/service_temp.go -SERVICE_NAME=beta -APP_NAME=app1 -ENV=dev -TYPE=type1 -APP_GROUP=group1 -CONTAINER_PORT=80 -BUILD_NUMBER=${BUILD_NUMBER} -PUBLIC_IP=${BETA_IP_AKS_1}"
                sh "go run manifest-generation/service_temp.go -SERVICE_NAME=beta -APP_NAME=app1 -ENV=dev -TYPE=type1 -APP_GROUP=group1 -CONTAINER_PORT=80 -BUILD_NUMBER=${BUILD_NUMBER} -PUBLIC_IP=${BETA_IP_AKS_2}"
                sh "go run manifest-generation/rc_temp.go -APP_NAME=app1 -ENV=dev -TYPE=type1 -VOLUMES=volume1 -APP_GROUP=group1 -CONTAINER_PORT=80 -BUILD_NUMBER=${BUILD_NUMBER} -REPLICA-COUNT=2 -VOLUME-MOUNTS=vol_mount -ARGS=arg -MEMORY_REQUESTS=64Mi -CPU_REQUESTS=250m -MEMORY_LIMITS=128Mi -CPU_LIMITS=500m"
            }
        }
        stage('Test Beta Services ') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/azurehackathon/cdorchestrator.git'
                echo "Success"
                sh "go run deployment-validator/main.go $BUILD_NUMBER ${BETA_IP_AKS_1} ${BETA_IP_AKS_2}"
            }
        }
        stage('Deploy LIVE') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/azurehackathon/cdorchestrator.git'
                echo "Success"
                echo "Deploying LIVE....."
            }
        }
        stage('Test LIVE') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/azurehackathon/cdorchestrator.git'
                echo "Success"
                sh "go run deployment-validator/main.go $BUILD_NUMBER ${LIVE_IP_AKS_1} ${LIVE_IP_AKS_2}"
            }
        }
    }
}
