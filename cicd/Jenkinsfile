pipeline {
    agent any
    environment {
        ENV = "dev"

        BETA_IP_AKS_1 = "52.169.231.177"
        BETA_IP_AKS_2 = "52.178.6.130"
        LIVE_IP_AKS_1 = "40.87.134.50"
        LIVE_IP_AKS_2 = "13.95.29.175"

    }
    parameters {
         string(defaultValue: "DEV", description: 'Environment to deploy to?', name: 'ENV')
    }
    stages {
        stage('Build') {
            steps {
                    echo "Building....."
                    sh "sudo docker build -t skdeep12/thoughtapi:${BUILD_NUMBER} ."
                    sh "sudo docker push skdeep12/thoughtapi:${BUILD_NUMBER}"
            }
        }
        stage('Deploy BETA') {
            steps{
                git branch: 'master',
                    url: 'https://github.com/azurehackathon/cdorchestrator.git'
                echo "Success"
                sh "go run manifest-generation/service_temp.go -SERVICE_NAME=beta -APP_NAME=app1 -ENV=dev -TYPE=type1 -APP_GROUP=group1 -CONTAINER_PORT=80 -BUILD_NUMBER=${BUILD_NUMBER} -PUBLIC_IP=${BETA_IP_AKS_1}"
                sh "go run manifest-generation/service_temp.go -SERVICE_NAME=beta -APP_NAME=app1 -ENV=dev -TYPE=type1 -APP_GROUP=group1 -CONTAINER_PORT=80 -BUILD_NUMBER=${BUILD_NUMBER} -PUBLIC_IP=${BETA_IP_AKS_2}"
                sh "go run manifest-generation/rc_temp.go -APP_NAME=app1 -ENV=dev -VOLUMES=volume1 -APP_GROUP=group1 -CONTAINER_PORT=80 -BUILD_NUMBER=${BUILD_NUMBER} -REPLICA_COUNT=2 -VOLUME_MOUNTS=vol_mount -ARGS=arg -MEMORY_REQUESTS=64Mi -CPU_REQUESTS=250m -MEMORY_LIMITS=128Mi -CPU_LIMITS=500m"
            }
        }
        stage('Test Beta Services ') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/azurehackathon/cdorchestrator.git'
                echo "Success"
                sh "go run deployment-validator/main.go $BUILD_NUMBER http://${BETA_IP_AKS_1}/healthcheck" http://${BETA_IP_AKS_2}/healthcheck""
            }
        }
        stage('Deploy LIVE') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/azurehackathon/cdorchestrator.git'
                echo "Success"
                echo "Deploying LIVE....."
            }
        }
        stage('Test LIVE') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/azurehackathon/cdorchestrator.git'
                echo "Success"
                sh "go run deployment-validator/main.go $BUILD_NUMBER http://${LIVE_IP_AKS_1}/healthcheck http://${LIVE_IP_AKS_2}/healthcheck"
            }
        }
    }
}
